@model Web.Models.ViewModels.Document.DocumentViewModel
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<div class="ui menu">
    <a class="item" onclick="$('.document').changeFontSize('+'); "><i class="plus icon"></i></a>
    <a class="item" onclick="$('.document').changeFontSize('-');"><i class="minus icon"></i></a>

    <div class="right menu">
        <a class="item" asp-controller="Document" asp-action="Print" asp-route-id="@Model.Id" target="_blank">
            <i class="print icon"></i> @Localizer["Print"]
        </a>
        <a class="item" asp-controller="Document" asp-action="PrintWord" asp-route-id="@Model.Id">
            <i class="file word outline icon"></i> @Localizer["ExportToWord"]
        </a>
        <a class="item" asp-controller="Document" asp-action="PrintPdf" asp-route-id="@Model.Id">
            <i class="file pdf outline icon"></i> @Localizer["ExportToPDF"]
        </a>

        <div class="ui right dropdown item disabled print-selection">
            <i class="i cursor icon"></i> @Localizer["PrintFragment"]
            <i class="dropdown icon"></i>
            <div class="menu">
                <div class="item">
                    <form asp-controller="Document" asp-action="PrintFragment" target="_blank">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="selected" />
                        <div onclick="javascript:$(this).closest('form').submit()">
                            <i class="print icon"></i> @Localizer["Print"]
                        </div>
                    </form>
                </div>
                <div class="item">
                    <form asp-controller="Document" asp-action="PrintFragmentWord">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="selected" />
                        <div onclick="javascript:$(this).closest('form').submit()">
                            <i class="file word outline icon"></i> @Localizer["ExportToWord"]
                        </div>
                    </form>
                </div>
                <div class="item">
                    <form asp-controller="Document" asp-action="PrintFragmentPdf">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="selected" />
                        <div onclick="javascript:$(this).closest('form').submit()">
                            <i class="file pdf outline icon"></i> @Localizer["ExportToPDF"]
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @*<form asp-controller="Document" asp-action="PrintSelectedPdf" asp-route-id="@Model.Id">
            <button class="item" type="submit">
                <i class="file pdf outline icon"></i> @Localizer["ExportToPDF"]
            </button>
        </form>*@
    </div>
</div>