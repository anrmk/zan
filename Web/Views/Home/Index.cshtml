@using Web.Models.DocumentViewModel;

@{
    ViewData["Title"] = "Home Page";
    var lang = ViewBag.Language;
}

<partial name="_SearchPanelPartial" model="new SearchViewModel()" />

<div class="ui grid">
    <div class="four wide column">
        <partial name="_FilterPanelPartial" model="new SearchViewModel()" />
    </div>
    <div class="twelve wide column">
        <table class="ui red table" id="datatable" style="width:100%">
            @*<tbody>
                    <tr>Результат поиска</tr>
                </tbody>*@
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/document-controller.js" asp-append-version="true"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            window.DocumentController = new DocumentController({
                language: '@lang',
                callback: (data, status, jqXHR, methodName, target) => { }
            });
        });
    </script>
}