@model Web.Models.AccountViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="ui large form login">
    <div class="ui stacked segment">
        <div class="field">
            <div class="ui left icon input">
                <i class="user icon"></i>
                <input asp-for="Email" placeholder="E-mail address" />
                @*<span asp-validation-for="Email" class="text-danger"></span>*@
            </div>
        </div>

        <div class="field">
            <div class="ui left icon input">
                <i class="lock icon"></i>
                <input asp-for="Password" placeholder="Password" />
                @*<span asp-validation-for="Password" class="text-danger"></span>*@
            </div>
        </div>

        <div class="field">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <button type="submit" class="ui fluid large purple submit button">Login</button>
    </div>

    <div asp-validation-summary="All" class="ui error message"></div>

    <div class="ui message">
        New to us? <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Sign Up!</a>
    </div>
</form>
