@model Web.Models.AccountViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="ui fluid form register">
    <div class="ui stacked segment">
        <div class="field">
            <div class="ui left icon input">
                <i class="user icon"></i>
                <input asp-for="Email" placeholder="E-mail address" />
            </div>
        </div>

        <div class="field">
            <div class="ui left icon input">
                <i class="lock icon"></i>
                <input asp-for="Password" placeholder="Password" />
            </div>
        </div>

        <div class="field">
            <div class="ui corner icon input">
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
            </div>
        </div>
        <button type="submit" class="ui fluid large teal submit button">Register</button>
    </div>

    <div asp-validation-summary="All" class="ui error message"></div>

    <div class="ui message">
        New to us? <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Login</a>
    </div>
</form>
